{
  "name": "kvm-backend",
  "version": "1.0.0",
  "type": "module",
  "main": "src/app.js",
  "scripts": {
    "dev": "nodemon --watch src --ext js,mjs src/app.js",
    "start": "node src/app.js",
    "start:workers": "concurrently \"node src/workers/vm.worker.js\" \"node src/workers/email.worker.js\" \"node src/workers/sync.worker.js\"",
    "dev:all": "concurrently \"npm run dev\" \"npm run start:workers\""
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bull": "^4.16.5",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "fast-xml-parser": "^5.3.0",
    "fs-extra": "^11.3.2",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.7",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "react-hot-toast": "^2.6.0",
    "redis": "^5.9.0",
    "sequelize": "^6.37.7"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10"
  }
}
